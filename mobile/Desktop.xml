<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Desktop Screenshots IE or Ipad">
   <test name="IE Screenshots">
   
      <parameter name="browser" value="windows7IE10"/> 
    
      <classes>
         <class name="brand.automation.Desktop" />
      </classes>
      
   </test>
   
   <test name="Ipad Screenshots">
   
   
      <parameter name="browser" value="iPadMini"/> 
      <classes>
         <class name="brand.automation.Desktop" />
      </classes>
      
   </test>
   
  
   
</suite>